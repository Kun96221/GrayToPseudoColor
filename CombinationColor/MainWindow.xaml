<Window x:Class="CombinationColor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CombinationColor"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000">
    <Grid>
        <Image x:Name="ImgsGray" HorizontalAlignment="Left" Height="600" Margin="35,35,0,0" VerticalAlignment="Top" Width="400"/>
        <Image x:Name="ImgsColour" HorizontalAlignment="Left" Height="600" Margin="475,35,0,0" VerticalAlignment="Top" Width="400"/>

        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="907,55,0,0" VerticalAlignment="Top" Width="75" Height="40" Click="button_Click"/>
        <Slider Maximum="100" Name="ImgRollWidget" Foreground="#FFBFCDDB" 
                                    Grid.Row="0" IsSnapToTickEnabled="True"  ValueChanged="ImgRollWidget_ValueChanged" Orientation="Vertical"  Minimum="0" Margin="0,10,937,10"/>

    </Grid>
</Window>
